{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["es2017"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
