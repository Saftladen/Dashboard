{
  "name": "saftboard-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "npm run tslint && jest",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c ../tslint-strict.json -p tsconfig.json",
    "watch-node": "nodemon --delay 0.1 --watch dist dist/server.js --watch ../web-app/shared_models",
    "start": "npm run build && node dist/server.js",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"ts,node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express-graphql": "^0.6.12",
    "fastify": "^1.9.0",
    "fastify-plugin": "^1.2.0",
    "fastify-postgres": "^1.0.0",
    "graphql": "^0.13.2",
    "join-monster": "^2.0.16",
    "pg": "^7.4.3",
    "randomstring": "^1.1.5",
    "source-map-support": "^0.5.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/graphql": "^0.13.4",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.5.7",
    "@types/pg": "^7.4.10",
    "@types/pretty-ms": "^3.2.0",
    "@types/randomstring": "^1.1.6",
    "@types/source-map-support": "^0.4.1",
    "@types/split2": "^2.1.6",
    "concurrently": "^3.6.1",
    "nodemon": "^1.18.3",
    "pretty-ms": "^3.2.0",
    "split2": "^2.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
